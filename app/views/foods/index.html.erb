<div class="container">
  <h1>Foods list</h1>
  
  <% if @food.size == 0 %>
    <p>No foods have been added yet.</p>
  <% else %>
    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Food</th>
          <th>Measurement unit</th>
          <th>Unit price</th>
          <th>Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <th class="align-middle"><%= food.name %></th>
            <td class="align-middle"><%= food.measurement_unit %></td>
            <td class="align-middle">$<%= food.price %></td>
            <td class="align-middle"><%= button_to 'Delete', food_url(food), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  
  <br>
  
  <%= link_to 'Add Food', new_food_path, class: "btn btn-info"%>
</div>